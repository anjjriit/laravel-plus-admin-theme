.flat-list-h
  list-style none
  display table
  border 1px solid transparent
  vertical-align middle
  width 100%
  margin 0
  padding 0

  > li
    float none
    display table-cell
    vertical-align middle
    padding 10px
    width auto

.flat-list-h.background
  background $clouds

  &:hover
    background darken($clouds, 10%)

/*=== Pagination ===*/
.pagination
  list-style none
  margin 0
  padding 0
  clearfix()

  > li
    float left
    border 1px solid $clouds
    border-left-width  0

    &:first-of-type
      border-top-left-radius 3px
      border-bottom-left-radius 3px
      border-left-width 1px

    &:last-of-type
      border-top-right-radius 3px
      border-bottom-right-radius 3px

    a
    span
      display block
      height $paginator-height
      line-height $paginator-height
      padding 0 ($paginator-height / 2.7)
      vertical-align middle
      color $text-color
      transition(all 200ms ease)

      &:hover
        background $clouds
        text-decoration none

    &.active
      border-top-color $primary
      border-bottom-color $primary

      span
        background $primary
        color white

.pagination > li.disabled

  span
    color $concrete
    cursor not-allowed

    &:hover
      background none