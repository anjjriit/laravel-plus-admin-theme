/*=== logo ===*/
.top-bar-logo-wrap
  display inline-block
  float left
  height 100%
  width $main-menu-width
  text-align center

  .logo
    display inline-block
    line-height 1
    height $top-bar-height

    img
      height 100%
      width auto

      &.small
        display none

    +below('l')
        img.big
          display none
        img.small
          display inline-block

+below('l')
  .top-bar-logo-wrap
    //width $top-bar-small-logo-width
    width auto

  .logo
    img.big
      display none
    img.small
      display inline-block
      
/*=== Hamburger Icon ===*/
.top-nav
  position relative
  float left
  display inline-block
  margin 0
  list-style none
  padding 0
  line-height 1

  > li
    display inline-block
    position relative
    float left
    padding 0
    line-height 1

    a
      float left
      padding 0 10px
      display inline-block
      font-size 16px
      line-height ($top-bar-height - 1px)
      color $text-color
      transition(all 200ms ease-in-out)

      &:hover
        background $clouds
        text-decoration none

      i
        color $text-color
        float left
        font-size 24px
        line-height 1

        &:before
          line-height ($top-bar-height - 1px)

/*=== Top bar search ===*/
.top-bar-search
  position fixed
  display block
  top 0
  left 0
  width 100%
  height $top-bar-height
  background rgba(black, 0.7)
  opacity 0
  visibility hidden
  transition(all 300ms ease)

  .search-form
    width 500px
    max-width 95%
    margin 0 auto
    margin-top $top-bar-search-top-margin

    +below('l')
      width 300px
      max-width 95%

    .input-group.search
      .button
        padding 0 30px

    .input-group.close
      .button
        width 40px
        background transparent
        color white

  &.show
    opacity 1
    visibility visible

/*=== Pull Left on Small Scree ===*/
+below('l')
  .pull-left-below-l
    float left !important
  .pull-right-below-l
    float right !important