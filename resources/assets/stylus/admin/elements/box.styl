.box
  background-color #ffffff
  margin 15px 0
  clearfix()

.box-header
  width 100%
  display inline-block
  background-color #ffffff
  border 1px solid #e8e8e8
  border-bottom 2px solid transparent
  vertical-align top
  position relative

  .box-header-title
    font-size 19px
    padding-left 15px
    line-height 30px
    font-weight 300
    text-transform uppercase
    display inline-block
    margin 10px 0

  &.primary
    border-bottom-color $primary
  &.info
    border-bottom-color $info
  &.warning
    border-bottom-color $warning
  &.success
    border-bottom-color $success

.box-action
  position relative
  margin 10px 0

  .action
    position relative
    float left
    line-height 30px
    padding 0 5px
    cursor pointer

    &:hover
    &:focus
      i
        color $text-color-dark

.box-content
  padding 30px
  background-color #ffffff
  border 1px solid #e8e8e8
  border-top 0px
  -webkit-transition 800ms
  -moz-transition 800ms
  -o-transition 800ms
  transition 800ms

/*=== Stats box ===*/
.stat-box
  width 100%
  display table
  background white
  border-radius(4px)

  .icon
    border-top-left-radius 4px
    border-bottom-left-radius 4px
    display: table-cell;
    float: left;
    text-align: center;
    font-size: 45px;
    line-height: 90px;
    padding 0 20px

  .content
    padding 10px
    float none
    display table-cell
    vertical-align top

    .text
      display block
      //font-weight

    .stats
      display block
      font-weight bold

.stat-box
  &.info
    .icon
      background $info
      color white
  &.warning
    .icon
      background $warning
      color white
  &.success
    .icon
      background $success
      color white
  &.error
    .icon
      background $danger
      color white
