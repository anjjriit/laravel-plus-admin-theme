// Base class
.well
  min-height 20px
  padding 15px
  margin-bottom 20px
  background-color $well-background
  border 1px solid $well-border
  box-shadow(inset 0 1px 1px rgba(0,0,0,.05))

  blockquote
    border-color #ddd

// Sizes
.well.large
  padding 25px

.well.small
  padding 9px

.well.primary
  background $primary
  color white

.well.success
  background $success
  color white

.well.info
  background $info
  color white

.well.warning
  background $warning
  color white

.well.danger
  background $danger
  color white