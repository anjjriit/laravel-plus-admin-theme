/*=== Border Radius ===*/
border-radius($radius)
  -webkit-border-radius $radius
  -moz-border-radius $radius
  border-radius $radius

/*==== Box sizing ====*/
box-sizing($boxmodel)
  -webkit-box-sizing $boxmodel
  -moz-box-sizing $boxmodel
  box-sizing $boxmodel

/*==== Box Shadow ====*/
//box-shadow( inset 0px 1px 1px 1px rgba(0,0,0, 0.3) ) // hor, ver, blur, spread
box-shadow($shadow)
  -webkit-box-shadow $shadow
  box-shadow $shadow

/*==== Gradient ====*/
linearGradient($gradient)
  background-image linear-gradient($gradient)

/*==== Transitions ====*/
transition($transition)
  -webkit-transition $transition
  -o-transition $transition
  transition $transition

/*==== Translate ====*/
translate2D($x, $y)
  -webkit-transform translate($x, $y)
  -ms-transform translate($x, $y) // IE9 only
  -o-transform translate($x, $y)
  transform translate($x, $y)

/*==== Clearfix ====*/
clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

/*=== Opacity ===*/
opacity(n)
  $value = round(n * 100)
  opacity n
  -ms-filter unquote('"progid:DXImageTransform.Microsoft.Alpha(Opacity=' + $value + ')"')
  filter unquote("alpha(opacity=" + $value + ")")

/*=== Placeholder ===*/
placeholder()
  &::-webkit-input-placeholder
    {block}

  &:-moz-placeholder
    {block}

  &::-moz-placeholder
    {block}

  &:-ms-input-placeholder
    {block}  
/*=== Size ===*/
size($width, $height = $width)
  width: $width;
  height: $height;

square($size)
  size($size)

circle($size)
  square($size);
  border-radius: 50%;

/*=== Selection ===*/
selection()
  &::-moz-selection
    {block}

  &::selection
    {block}

/*=== Scrollbar ===*/
scrollbar($name, $background = #FB503B, $width = 8px)

  if $name || $name == ''
    {$name}::-webkit-scrollbar
      width $width;
    /* Track */
    {$name}::-webkit-scrollbar-track
      -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
      //-webkit-border-radius ($width - 2)
      //border-radius ($width - 2)
      width $width
    /* Handle */
    {$name}::-webkit-scrollbar-thumb
      -webkit-border-radius ($width - 2)
      width $width
      border-radius ($width - 2)
      background $background
      -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)
    {$name}::-webkit-scrollbar-thumb:window-inactive
      background rgba(255,0,0,0.4)
      width 6px
              
/*=== background-linear-gradient ===*/
background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval, deprecatedWebkitStartPoint = false, deprecatedWebkitEndPoint = false)
  background-color startColor
  if deprecatedWebkitStartPoint && deprecatedWebkitEndPoint
    background-image -webkit-gradient(linear, deprecatedWebkitStartPoint, deprecatedWebkitEndPoint, color-stop(startInterval, startColor), color-stop(endInterval, endColor))
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

/*=== User select mixin ===*/
user-select($value = none)
  -webkit-user-select: $value;  /* Chrome all / Safari all */
  -moz-user-select: $value;     /* Firefox all */
  -ms-user-select: $value;      /* IE 10+ */
  user-select: $value;